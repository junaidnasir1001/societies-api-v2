# Environment Configuration
NODE_ENV=production
PORT=3001

# API Configuration
API_KEY=your-api-key-here

# Trigger.dev Configuration
TRIGGER_API_KEY=tr_dev_your_api_key_here
TRIGGER_PROJECT_ID=proj_your_project_id_here
USE_TRIGGER=false
# If USE_TRIGGER=true locally, set a public URL (ngrok, cloudflared, etc.) so Trigger.dev can reach your webhook
PUBLIC_BASE_URL=

# Google Credentials for Societies.io Login
GOOGLE_EMAIL=your-email@gmail.com
GOOGLE_PASSWORD=your-password

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=60000

# Session Configuration
SESSION_HOME=/app/sessions
USER_DATA_DIR=/app/browser-data
